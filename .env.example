# VisionGuard AI - Environment Variables Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/visionguard_db

# ============================================================================
# JWT AUTHENTICATION CONFIGURATION
# ============================================================================

# Secret key for JWT token signing (CHANGE IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# Access token expiration time in minutes (default: 60 minutes)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Refresh token expiration time in days (default: 7 days)
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Server host (use 0.0.0.0 to allow external connections)
SERVER_HOST=0.0.0.0

# Server port
SERVER_PORT=8000

# Debug mode (set to False in production)
DEBUG_MODE=True

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins for CORS (comma-separated)
# Use * for development only, specify exact origins in production
# Example: http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# VIDEO CONFIGURATION (Optional - from existing setup)
# ============================================================================

# Path to video file for processing
# VIDEO_FILE_PATH=./assets/sample.mp4

# ============================================================================
# AI MODEL CONFIGURATION (Optional - from existing setup)
# ============================================================================

# Enable AI processing
# ENABLE_AI_PROCESSING=True

# ============================================================================
# PRODUCTION SECURITY NOTES
# ============================================================================

# 1. Generate strong JWT_SECRET_KEY using cryptographically secure random
# 2. Set DEBUG_MODE=False in production
# 3. Use specific CORS origins, never use * in production
# 4. Use strong database passwords
# 5. Enable HTTPS/WSS in production
# 6. Regularly rotate JWT_SECRET_KEY
# 7. Keep this file in .gitignore
# 8. Use environment variable management in production (Docker secrets, etc.)
